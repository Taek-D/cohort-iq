{
  "permissions": {
    "allow": [
      "Bash(npm run dev)",
      "Bash(npm run build)",
      "Bash(npm run preview)",
      "Bash(npm run test*)",
      "Bash(npm install *)",
      "Bash(npx prettier *)",
      "Bash(npx vitest *)",
      "Bash(ls *)",
      "Bash(mkdir *)",
      "mcp__vercel__deploy_to_vercel",
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_click",
      "mcp__playwright__browser_take_screenshot",
      "mcp__playwright__browser_evaluate",
      "mcp__playwright__browser_run_code",
      "mcp__playwright__browser_snapshot",
      "mcp__playwright__browser_console_messages",
      "mcp__playwright__browser_resize",
      "mcp__playwright__browser_close",
      "WebFetch(domain:cohort-iq.vercel.app)",
      "WebFetch(domain:github.com)",
      "WebSearch",
      "WebFetch(domain:amplitude.com)",
      "WebFetch(domain:docs.mixpanel.com)",
      "WebFetch(domain:posthog.com)",
      "WebFetch(domain:blog.logrocket.com)",
      "WebFetch(domain:help.amplitude.com)",
      "WebFetch(domain:linear.app)",
      "WebFetch(domain:medium.com)",
      "WebFetch(domain:docs.stripe.com)",
      "WebFetch(domain:stripe.com)",
      "WebFetch(domain:vercel.com)",
      "WebFetch(domain:www.pencilandpaper.io)",
      "WebFetch(domain:www.metabase.com)",
      "WebFetch(domain:www.quantledger.app)",
      "WebFetch(domain:www.colorsandfonts.com)",
      "WebFetch(domain:mobbin.com)",
      "WebFetch(domain:brand.amplitude.com)",
      "WebFetch(domain:www.lazarev.agency)",
      "mcp__playwright__browser_wait_for",
      "mcp__vercel__get_project",
      "Skill(bkit:pdca)",
      "mcp__remotion-documentation__remotion-documentation",
      "mcp__context7__resolve-library-id",
      "mcp__context7__query-docs"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(npm publish *)",
      "Bash(git push --force *)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "cmd=$(echo \"$CLAUDE_TOOL_INPUT\" | jq -r '.command // \"\"'); case \"$cmd\" in *rm\\ -rf*|*--force*|*--hard*|*drop\\ *|*truncate\\ *) echo 'BLOCK: Destructive command detected. Please confirm with user first.' ; exit 2 ;; *) exit 0 ;; esac"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"E:/프로젝트/코호트-LTV 분석/cohort-iq\" && npx prettier --write \"$CLAUDE_FILE_PATH\" 2>/dev/null || true"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo -e '\\a'"
          }
        ]
      }
    ]
  }
}
